<p id="notice"><%= notice %></p>

<h1>Item Types</h1>
<div class="container">

<table class="table">
  <thead>
    <tr>
      <th>Item type</th>
      <th>Item type code</th>
      <th>Item type name</th>
      <th>Item type display</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_types.each do |item_type| %>
      <tr>
        <td><%= item_type.item_type_id %></td>
        <td><%= item_type.item_type_code %></td>
        <td><%= item_type.item_type_name %></td>
        <td><%= item_type.item_type_display %></td>
        <td><%= link_to 'Show', item_type %></td>
        <td><%= link_to 'Edit', edit_item_type_path(item_type) %></td>
        <td><%= link_to 'Destroy', item_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

<%= link_to 'New Item Type', new_item_type_path, class: 'btn btn-success'%>
