<p id="notice"><%= notice %></p>

<h1>Circ Policy Groups</h1>

<table class="table">
  <thead>
    <tr>
      <th>Circ group</th>
      <th>Circ group name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circ_policy_groups.each do |circ_policy_group| %>
      <tr>
        <td><%= circ_policy_group.circ_group_id %></td>
        <td><%= circ_policy_group.circ_group_name %></td>
        <td><%= link_to 'Show', circ_policy_group %></td>
        <td><%= link_to 'Edit', edit_circ_policy_group_path(circ_policy_group) %></td>
        <td><%= link_to 'Destroy', circ_policy_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Circ Policy Group', new_circ_policy_group_path,class: 'btn btn-success' %>
